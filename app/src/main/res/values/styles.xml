<resources>
    <style name="Theme.MemeKeyboard" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.TransparentPicker" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" />

    <style name="KeyboardKey">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/key_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
