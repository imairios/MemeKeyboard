<resources>
    <style name="Theme.MemeKeyboard" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.TransparentPicker" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" />

    <style name="KeyboardKey">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item> <!-- Gboard-like -->
        <item name="android:layout_weight">1</item>

        <item name="android:layout_margin">2dp</item>

        <item name="android:background">@drawable/key_background</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">24sp</item> <!-- Bigger, closer to Gboard -->
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="Theme.MemeKeyboard.Transparent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
