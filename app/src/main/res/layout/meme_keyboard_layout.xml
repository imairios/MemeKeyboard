<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/meme_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/darker_gray">

    <TextView
        android:id="@+id/search_input_fake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:text="Search by tag"
        android:textColor="#000000" />

    <!-- Row 1 -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <Button android:id="@+id/key_q" android:text="Q" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_w" android:text="W" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_e" android:text="E" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_r" android:text="R" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_t" android:text="T" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_y" android:text="Y" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_u" android:text="U" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_i" android:text="I" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_o" android:text="O" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_p" android:text="P" style="@style/KeyboardKey"/>
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <Button android:id="@+id/key_a" android:text="A" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_s" android:text="S" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_d" android:text="D" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_f" android:text="F" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_g" android:text="G" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_h" android:text="H" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_j" android:text="J" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_k" android:text="K" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_l" android:text="L" style="@style/KeyboardKey"/>
    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <Button android:id="@+id/key_caps" android:text="⇧" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_z" android:text="Z" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_x" android:text="X" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_c" android:text="C" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_v" android:text="V" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_b" android:text="B" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_n" android:text="N" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_m" android:text="M" style="@style/KeyboardKey"/>
        <Button android:id="@+id/key_delete" android:text="⌫" style="@style/KeyboardKey"/>
    </LinearLayout>

    <!-- Row 4 -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <Button android:id="@+id/key_space" android:text="SPACE" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
